  "protocol_handlers": [
    {
      "protocol": "web+pharmasys",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"]
      },
      "name": "PharmaSys Data File"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "storage",
    "background-sync",
    "periodic-background-sync"
  ],
  "related_applications": [
    {
      "platform": "web",
      "url": "https://pharmasys.example.com"
    }
  ],
  "prefer_related_applications": false,
